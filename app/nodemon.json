{
  "verbose": true,
  "ignore": [
    ".git",
    "./build/**/*",
    "node_modules/**/node_modules",
    "node_modules/"
  ],
  "exec": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./index.js",
  "watch": [
    "./src/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,js,json"
}